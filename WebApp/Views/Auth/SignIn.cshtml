@model SignInViewModel
@{
    ViewData["Title"] = Model.Title;
}
<section id="signin" >
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
            <div >@Model.ErrorMessage</div>


            <h1>Welcome Back</h1>
            <p>Don't have an account yet?' <a asp-asp-controller="Auth" asp-action="SignUp">Sign up here</a>.</p>

            <div class="content">
              

                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email">Email</label>
                    <span asp-validation-for="Form.Email"></span>
                    <input asp-for="Form.Email" >
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for="Form.Password">Password</label>
                    <span asp-validation-for="Form.Password"></span>
                    <input asp-for="Form.Password" >
                </div>

               

                <div id="form-terms" class="checkbox-group">
                    <input asp-for="Form.RememberMe" type="checkbox" >
                    <label asp-for="Form.RememberMe"> </label>
                    
                </div>


                <button class="btn-theme-s" type="submit">@Model.Title</button>

            <a id="form-forgot-password" asp-controller="Accout" asp-action="Forgot">Forgot your password?</a>
            </div>

        </form>
    </div>
</section>

