@model SignUpViewModel


@{
    ViewData["Title"] = Model.Title;
}

<section id="signup" class="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp"  novalidate>
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-asp-controller="Auth" asp-action="SignIn">Sign in here</a>.</p>

            <div class="content">
                <div id="form-firstname" class="input-group">
                    <label asp-for="Form.FirstName">First Name</label>
                    <span asp-validation-for="Form.FirstName"></span>
                    <input asp-for="Form.FirstName"    type="text" id="firstname" name="firstname" >
                </div>

                <div id="form-lastname" class="input-group">
                    <label asp-for="Form.LastName">Last Name</label>
                    <span asp-validation-for="Form.LastName"></span>
                    <input asp-for="Form.LastName" type="text" id="lastname" name="lastname">
                </div>

                <div id="form-email" class="input-group">
                    <label asp-for="Form.Email">Email</label>
                    <span asp-validation-for="Form.Email"></span>
                    <input asp-for="Form.Email" type="email" id="email" name="email" >
                </div>

                <div id="form-password" class="input-group">
                    <label asp-for="Form.Password">Password</label>
                    <span asp-validation-for="Form.Password"></span>
                    <input asp-for="Form.Password" type="password" id="password" name="password" >
                </div>

                <div id="form-confirm" class="input-group">
                    <label asp-for="Form.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Form.ConfirmPassword"></span>
                    <input asp-for="Form.ConfirmPassword"  type="password" id="confirm-password" name="confirm-password" required>
                </div>

                <div id="form-terms" class="checkbox-group">
                    <input asp-for="Form.TermsAndConditions"  type="checkbox" id="terms" name="terms" required>
                    <label asp-for="Form.TermsAndConditions" >
                        I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions</a>.
                    </label>
                    <span asp-validation-for="Form.TermsAndConditions"></span>
                </div>

            </div>
            <button class="btn-theme-s" type="submit" >@Model.Title</button>
        </form>
    </div>
</section>


